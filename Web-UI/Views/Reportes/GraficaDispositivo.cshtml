@{
    ViewBag.Title = "";
    Layout = "../Shared/_LayoutDashboard.cshtml";
}

<div class="container">
    <div id="contenedormonitordispositivo" class="mt-5">
        <h2>Aqui puedes revizar los parametros que estan midiendo los dispositivos</h2>
        <div class="row">
            <div class="col-md-4">
                <label for="numeroDispositivo" class="form-label">Número de Dispositivo:</label>
                <input type="number" id="numeroDispositivo" value="1" min="1" class="form-control">
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <canvas id="miGrafico" width="300" height="150" class="border"></canvas>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <button id="iniciarContinuarBtn" class="btn btn-primary">Iniciar/Continuar</button>
                <button id="pausarBtn" class="btn btn-danger">Pausar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/pages/reportesAdm/MonitorDispositivo.js"></script>
    <script src="~/css/bootstrap.css"></script>
}
