@{
    ViewBag.Title = "";
    Layout = "../Shared/_LayoutDashboard.cshtml";
}


<section id="configuracionBase">
    <h1 class="titulo">Configuración de precios base</h1>
    <div class="contenedor-registro-servicio">
        <form action="" class="registro-servicio" id="formularioConfiguracionBase">
            <label class="col-sm-2 col-form-label titulo-perfil">Porcentaje base de impuestos:</label>
            <input type="text" class="form-control" id="impuesto" style="margin-bottom: 2%;">
            <label class="col-sm-2 col-form-label titulo-perfil">Porcentaje base de descuento:</label>
            <input type="text" class="form-control" id="descuento" style="margin-bottom: 2%;">
            <label class="col-sm-2 col-form-label titulo-perfil">Monto base de reserva:</label>
            <input type="text" class="form-control" id="servicio" style="margin-bottom: 2%;">


            <button type="submit" class="btn btn-primary" id="botonGuardar">Guardar</button>
            <a asp-controller="Dashboard" asp-action="DashboardHome" class="btn btn-primary" id="cancelar">Cancelar</a>
        </form>
    </div>

    <div class="svg-wave" style="height: 150px; overflow: hidden; margin-top: -6%;">
        <svg viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;">
            <path d="M0.00,49.98 C149.99,150.00 349.20,-49.98 500.00,49.98 L500.00,150.00 L0.00,150.00 Z"
                  style="stroke: none; fill: #2C3E50;"></path>
        </svg>
    </div>
</section>

<script src="~/js/pages/configuracion/Configuracion.js" asp-append-version="true"></script>

<script>

        validarFormularioConfiguracionBase();

</script>