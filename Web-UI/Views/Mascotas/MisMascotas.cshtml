@model DTO.Models.Usuario
@inject IHttpContextAccessor Accesor
@{
    ViewBag.Title = "";
    Layout = "../Shared/_LayoutDashboard.cshtml";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/pages/mascotas/ListaMascotasDuenno.js" asp-append-version="true"></script>


<div id="idUsuario" data-id="@Accesor.HttpContext.Session.GetInt32("Id")"></div>

<section id="contenedorListaMascotas">
<h1 class="titulo">Mascotas Actuales</h1>
    <table class="table table-hover tabla-mascotas-registro">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Raza</th>
                <th scope="col">Edad</th>
                <th scope="col">Agresividad</th>
                <th scope="col">Estado</th>
                <th scope="col">Editar</th>
            </tr>
        </thead>
        <tbody id="tablaMascotasBody">

        </tbody>
    </table>
</section>

<div class="svg-wave" style="height: 150px; overflow: hidden; margin-top: 10%;">
    <svg viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;">
        <path d="M0.00,49.98 C149.99,150.00 349.20,-49.98 500.00,49.98 L500.00,150.00 L0.00,150.00 Z"
              style="stroke: none; fill: #2C3E50;"></path>
    </svg>
</div>


