@inject IHttpContextAccessor Accesor
@{
    ViewBag.Title = "";
    Layout = "../Shared/_LayoutDashboard.cshtml";
}

<div>
    @{
        var rol = Accesor.HttpContext.Session.GetString("rol");
    }

    <div id="idUsuario" data-id="@Accesor.HttpContext.Session.GetInt32("Id")"></div>
    
    @if (!string.IsNullOrEmpty(rol))
    {
        switch (rol)
        {
            case "Administrador":
                <div id="contenedoradmin">
                    <h2>Bienvenido Administrador a la aplicación de Pets Inc</h2>
                    <p>Aquí puedes ver un resumen de las actividades de la aplicación.</p>
                    <br>
                    <p>Lista de Reservas</p>
                    <br>
                    <div id="myAdminGrid" style="height: 300px; width: 100%;" class="ag-theme-alpine"></div>
                    <br>
                    <p>Lista de Usuarios</p>
                    <br>
                    <div id="listUsuariosGrid" style="height: 300px; width: 100%;" class="ag-theme-alpine"></div>
                </div>
                
                break;

            case "Cliente":
                <div id="contenedorcliente">
                    <h2>Bienvenido Cliente a la aplicación de Pets Inc</h2>
                    <p>Aquí tiene un resumen de las reservas a su nombre, si desea ver el estado de su mascota, sírvase ver el número de dispositivo e ir a la sección de reportes y consultas con el número de dispositivo</p>

                    <div id="contenedortabla" class="row">
                        <div class="col-md-12">
                            <h3 style="margin-top: 3%">Tabla de Reservas</h3>
                            <div id="myGridCliente" style="height: 300px; width: 100%;" class="ag-theme-alpine"></div>
                        </div>
                    </div>

                </div>
                break;

            case "Gestor de Reservas":
                <div>
                    <h2>Bienvenido Gestor a la aplicación de Pets Inc</h2>
                </div>
                break;

            default:
                <h2>Rol no reconocido</h2>
                break;
        }
    }
    else
    {
        <h2>Rol no disponible</h2>
    }

</div>

<script defer type="text/javascript" src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/ag-grid-community/dist/ag-grid-community.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script defer type="text/javascript" src="~/js/pages/adminDashboard/dashboardRol/DashboardAdm.js"></script>
<script defer type="text/javascript" src="~/js/pages/adminDashboard/dashboardRol/DashboardRol.js"></script>
