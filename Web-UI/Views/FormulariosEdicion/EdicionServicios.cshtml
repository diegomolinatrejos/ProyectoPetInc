@{
    ViewBag.Title = "";
    Layout = "../Shared/_LayoutDashboard.cshtml";
}


<section id="edicionServicio">
    <h1 class="titulo">Edición de Servicio</h1>

    <div class="contenedor mascota-info" style="margin-top: -3%;">
        <div class="contenedor-registro-mascota">
            <form action="" class="registro-mascota">
                <label class="col-sm-2 col-form-label titulo-perfil">Nombre del servicio:</label>
                <input type="text" class="form-control" id="nombreServicioEditar" style="margin-bottom: 2%;">
                <label class="col-sm-2 col-form-label titulo-perfil">Descripción:</label>
                <textarea class="form-control" id="descripcionServicioEditar" rows="3" style="height: 145px;" spellcheck="false"></textarea>
                <label class="col-sm-2 col-form-label titulo-perfil">Precio:</label>
                <input type="text" class="form-control" id="precioServicioEditar">
                <label class="col-sm-2 col-form-label titulo-perfil">Estado:</label>
                <input type="text" class="form-control" id="estadoServicioEditar">
                <div class="fotos-registro-mascotas">
                    <label class="col-sm-2 col-form-label titulo-perfil">Foto del servicio:</label>
                    <input type="file" class="form-control foto-servicio-formulario" id="fotoServicioEditar" onchange="mostrarImagen(this, 'imagenServicioEditar')">
                </div>
                <div style="margin-top: 2%; text-align: center;">
                    <button type="submit" class="btn btn-primary" id="guardarServicioEditar">Guardar</button>
                    <button type="submit" class="btn btn-primary" id="cancelarServicioEditar">Cancelar</button>
                </div>
            </form>
        </div>

        <div class="contenedor-imagen-servicios">
            <h2>Visualización de imagen</h2>
            <div style=" margin-left: 0%;">
                <img id="imagenServicioEditar" class="imagen-servicio" src="#" alt="Imagen del servicio" style=" display: inline-block; width: 300px; margin-top: 5%; height: 300px;">
            </div>
        </div>
    </div>
</section>

<script>
    function mostrarImagen(input, idImagen) {
        var reader = new FileReader();
        reader.onload = function (e) {
            document.getElementById(idImagen).src = e.target.result;
            document.getElementById(idImagen).style.display = "inline-block";
        };
        reader.readAsDataURL(input.files[0]);
    }
</script>