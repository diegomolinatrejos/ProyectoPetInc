@{
    ViewBag.Title = "";
    Layout = "../Shared/_LayoutDashboard.cshtml";
}



<section id="edicionServicio">
    <h1 class="titulo">Registro de Servicio</h1>

    <div class="contenedor mascota-info" style="margin-top: -3%;">
        <div class="contenedor-registro-mascota">
            <form id="formularioRegistroServicios" action="" class="registro-mascota">
                <label class="col-sm-2 col-form-label titulo-perfil">Nombre del servicio:</label>
                <input type="text" class="form-control" id="txtInputNombreServicio" style="margin-bottom: 2%;">
                <label class="col-sm-2 col-form-label titulo-perfil">Descripción:</label>
                <textarea class="form-control" id="txtInputDescripcionServicio" rows="3" style="height: 145px;" spellcheck="false"></textarea>
                <label class="col-sm-2 col-form-label titulo-perfil">Precio:</label>
                <input type="text" class="form-control" id="txtInputPrecioServicio">
                <div style="margin-top: 5%; text-align: center;">
                    <button type="submit" class="btn btn-primary" id="guardarServicioEditar">Registrar</button>
                </div>
            </form>
        </div>

        <div class="contenedor-imagen-servicios">
            <h2></h2>
            <div style=" margin-left: 0%;">
                <img id="imagenServicio" class="imagen-servicio" src="~/media/img/huella.png" alt="Imagen del servicio" style=" display: inline-block; width: 300px; margin-top: 5%; height: 300px; object-fit: cover;">
            </div>
        </div>
    </div>
    <div class="svg-wave" style="height: 150px; overflow: hidden; margin-top: 10%;">
        <svg viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;">
            <path d="M0.00,49.98 C149.99,150.00 349.20,-49.98 500.00,49.98 L500.00,150.00 L0.00,150.00 Z"
                  style="stroke: none; fill: #2C3E50;"></path>
        </svg>
    </div>
</section>

<script src="~/js/pages/servicios/RegistroServicios.js" asp-append-version="true"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        validarFormularioRegistroServicios();

    });
</script>