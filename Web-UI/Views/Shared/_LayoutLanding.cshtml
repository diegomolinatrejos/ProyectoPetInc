@inject IHttpContextAccessor Accesor
<DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pets Inc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" /> 

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.css" />

    <!-- Enlace a la fuente Montserrat -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">

    <!-- Estilos según lo que pusimos en la IAS -->
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
        }

        h1 {
            font-size: 28px;
        }

        h2 {
            font-size: 22px;
        }
    </style>

</head>
<body>

        <section id="realizarReserva">
            <h1 class="titulo">Edición de Reserva</h1>


            <div class="contenedor reserva-info">
                <div class="contenedor-registro-reserva">
                    <form action="" class="registro-reserva">
                        <label class="col-sm-2 col-form-label titulo-perfil">Seleccione una mascota:</label>
                        <input type="text" class="form-control" id="mascotaReserva" value="Toto" disabled>
                        <label class="col-sm-2 col-form-label titulo-perfil">Fecha de entrada:</label>
                        <input type="date" class="form-control" id="fechaEntrada" readonly>
                        <label class="col-sm-2 col-form-label titulo-perfil">Fecha de salida:</label>
                        <input type="date" class="form-control" id="fechaSalida">
                        <label class="col-sm-2 col-form-label titulo-perfil">Comentarios:</label>
                        <textarea class="form-control" id="comentarios" rows="3" style="height: 145px;" spellcheck="false"></textarea>
                        <label class="col-sm-2 col-form-label titulo-perfil">Monto a pagar:</label>
                        <input type="text" class="form-control" id="montoReserva" value="₡20.000" disabled>

                        <button type="submit" class="btn btn-primary" id="boton-enviar">Realizar Reserva</button>
                    </form>

                </div>

                <div style="margin-top: 4%;">
                    <div style="margin-bottom: 2%;">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" data-bs-toggle="tab" href="#contenedorListaServicios" aria-selected="true" role="tab">Servicios</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link active" data-bs-toggle="tab" href="#contenedorListaPaquetes" aria-selected="false" role="tab">Paquetes</a>
                            </li>
                        </ul>
                    </div>
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade" id="contenedorListaServicios" role="tabpanel" style="font-size: 14px;">
                            <table class="table table-hover tabla-servicios-registro">
                                <thead>
                                    <tr>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Descripción</th>
                                        <th scope="col">Precio</th>
                                        <th scope="col">Añadir</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="table-active">
                                        <td>Grooming</td>
                                        <td>Servicio de aseo y cuidado personal para que tus mascotas se vean y e sientan geniales.</td>
                                        <td>₡20.000</td>
                                        <td>  <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault"></td>
                                    </tr>
                                    <tr class="table-active">
                                        <td>Entrenamiento</td>
                                        <td>Clases de entrenamiento profesional para mejorar el comportamiento y habilidades de tus mascotas.</td>
                                        <td>₡25.000</td>
                                        <td>  <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault"></td>
                                    </tr>
                                    <tr class="table-active">
                                        <td>Veterinaria</td>
                                        <td>Atención médica y cuidados veterinarios de alta calidad para mantener a tus mascotas sanas y felices.</td>
                                        <td>₡25.000</td>
                                        <td>  <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault"></td>
                                    </tr>
                                    <tr class="table-active">
                                        <td>Paseos</td>
                                        <td>Ofrecemos paseos diarios y actividades al aire libre para mantener a tus mascotas activas y contentas.</td>
                                        <td>₡8.500</td>
                                        <td>  <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="contenedorListaPaquetes" role="tabpanel" style="font-size: 14px; ">

                            <table class="table table-hover tabla-servicios-registro">
                                <thead>
                                    <tr>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Descripción</th>
                                        <th scope="col">Precio</th>
                                        <th scope="col">Añadir</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="table-active">
                                        <td>Paquete Gromming + Hospedaje</td>
                                        <td> Disfruta del servicio de hospedaje + el servicio de paseos diarios y actividades al aire libre para tu mascota con un descuento del 15%.</td>
                                        <td>₡34.000</td>
                                        <td>  <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault"></td>
                                    </tr>
                                    <tr class="table-active">
                                        <td>Paquete Paseos + hospedaje</td>
                                        <td> Disfruta del servicio de hospedaje y el servicio de aseo y cuidado personal para tu mascota con un descuento del 20%.</td>
                                        <td>₡22.800</td>
                                        <td>  <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <div>
                    <div class="svg-wave" style="height: 150px; overflow: hidden; margin-top: -6%;">
                        <svg viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;">
                            <path d="M0.00,49.98 C149.99,150.00 349.20,-49.98 500.00,49.98 L500.00,150.00 L0.00,150.00 Z"
                                  style="stroke: none; fill: #2C3E50;"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </section>

        <main role="main" style="margin-bottom: -3%;">
                @RenderBody()
            </main>
 


    <footer class="footer" style="background-color:#2c3e50">

        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#95a5a6" fill-opacity="1" d="M0,160L30,181.3C60,203,120,245,180,234.7C240,224,300,160,360,122.7C420,85,480,75,540,96C600,117,660,171,720,176C780,181,840,139,900,112C960,85,1020,75,1080,74.7C1140,75,1200,85,1260,80C1320,75,1380,53,1410,42.7L1440,32L1440,0L1410,0C1380,0,1320,0,1260,0C1200,0,1140,0,1080,0C1020,0,960,0,900,0C840,0,780,0,720,0C660,0,600,0,540,0C480,0,420,0,360,0C300,0,240,0,180,0C120,0,60,0,30,0L0,0Z"></path></svg>
        <div style="text-align: center; margin-top: -5%;">
            <p class="" style="color: #ffffff; font-size: 18px; font-weight: bold;">Pets Inc</p>
            <div style=" width: 100%; height: 70px;">
                <a href="https://www.instagram.com/" target="_blank"><img src="~/media/img/insta.svg" class="iconos-footer" alt="Perfil de Instagram"></a>
                <a href="https://www.facebook.com/" target="_blank"><img src="~/media/img/fc.svg" class="iconos-footer" alt="Perfil de Facebook"></a>
                <a href="https://web.whatsapp.com/" target="_blank"><img src="~/media/img/ws.svg" class="iconos-footer" alt="Chat de WhatsApp"></a>
            </div>
            <hr class="linea-footer">
                <p> <a href="https://quantumcodersui.azurewebsites.net/" style="text-decoration: none; color: #ffffff">Quantum Coders &copy; 2023</a></p>
            <p style="color: #ffffff; margin-bottom: 0%;">Todos los derechos reservados.</p>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script async src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC-hZqp_2KmHJWm0e7MmdTobU8eAozfI8s&callback=console.debug&libraries=maps,marker&v=beta"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

